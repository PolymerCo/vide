{
  "name": "vide-desktop",
  "version": "0.0.1",
  "description": "Vide Image viewer",
  "main": "dist/main.js",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && npm run build:ts && npm run build:sass && npm run build:public",
    "build:sass": "sass style:dist",
    "build:public": "cp -rf public/* dist",
    "build:ts": "tsc",
    "start": "npm run build && electron dist/index.js",
