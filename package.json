  "bugs": {
    "url": "https://github.com/PolymerCo/vide/issues"
  },
  "homepage": "https://github.com/PolymerCo/vide#readme",
  "devDependencies": {
    "@babel/types": "^7.21.2",
    "@types/electron": "^1.6.10",
    "@types/http-cache-semantics": "*",
    "@types/node": "^16.18.14",
    "electron": "^23.1.2",
    "prettier": "^2.8.4",
    "sass": "^1.58.3",
    "typescript": "^4.9.5",
    "vue": "^3.2.47"
  }
